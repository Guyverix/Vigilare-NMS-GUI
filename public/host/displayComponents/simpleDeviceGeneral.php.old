<?php
/*
   This will contain hostname and basic status
   looking at left justification and 2 possible columns
   depending on what is present
   left column general, right column specific and host details
*/
?>
<div class="row g-3">
  <?php if (!empty($hosts)): ?>
    <?php foreach ($hosts as $host): ?>
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><?php echo htmlspecialchars($host['hostname']); ?></h5>
            <h6 class="card-subtitle mb-2 text-muted"><?php echo htmlspecialchars($host['ip']); ?></h6>
            <p class="card-text mb-1">
              <strong>Status:</strong>
              <?php if ($host['status'] === 'Up'): ?>
                <span class="badge bg-success">Up</span>
              <?php else: ?>
                <span class="badge bg-danger">Down</span>
              <?php endif; ?>
            </p>
            <p class="card-text mb-1">
              <strong>Last Check:</strong> <?php echo htmlspecialchars($host['last_check']); ?>
            </p>
            <p class="card-text">
              <strong>OS:</strong> <?php echo htmlspecialchars($host['os']); ?>
            </p>
            <a href="#" class="card-link">View Metrics</a>
          </div>
        </div>
      </div>
    <?php endforeach; ?>
  <?php else: ?>
    <div class="alert alert-warning">No host data available.</div>
  <?php endif; ?>
</div>


